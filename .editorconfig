# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.{rs,toml,json}]
indent_size = 4

[*.{typ,md}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
