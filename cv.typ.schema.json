{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/jskherman/cv.typ/main/cv.typ.schema.json",
    "type": "object",
    "title": "jskherman/cv.typ schema",
    "required": [
        "personal",
        "education",
        "skills",
        "languages"
    ],
    "properties": {
        "personal": {
            "type": "object",
            "required": [
                "name",
                "profiles"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "email"
                },
                "phone": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "url": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uri"
                },
                "location": {
                    "type": [
                        "object",
                        "null"
                    ],
                    "required": [
                        "city",
                        "region",
                        "postalCode",
                        "country"
                    ],
                    "properties": {
                        "city": {
                            "type": "string"
                        },
                        "region": {
                            "type": "string"
                        },
                        "country": {
                            "type": "string"
                        },
                        "postalCode": {
                            "type": "integer"
                        }
                    }
                },
                "profiles": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "network",
                            "username",
                            "url"
                        ],
                        "properties": {
                            "network": {
                                "type": "string"
                            },
                            "username": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string",
                                "format": "uri"
                            }
                        }
                    }
                }
            }
        },
        "work": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "organization",
                    "location",
                    "positions"
                ],
                "properties": {
                    "organization": {
                        "type": "string"
                    },
                    "location": {
                        "type": "string"
                    },
                    "url": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "uri"
                    },
                    "positions": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "position",
                                "startDate",
                                "endDate",
                                "highlights"
                            ],
                            "properties": {
                                "position": {
                                    "type": "string"
                                },
                                "startDate": {
                                    "type": "string",
                                    "format": "date"
                                },
                                "endDate": {
                                    "type": "string"
                                },
                                "highlights": {
                                    "type": [
                                        "array",
                                        "null"
                                    ],
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "education": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "institution",
                    "location",
                    "area",
                    "studyType",
                    "startDate",
                    "endDate",
                    "highlights"
                ],
                "properties": {
                    "institution": {
                        "type": "string"
                    },
                    "location": {
                        "type": "string"
                    },
                    "url": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "uri"
                    },
                    "area": {
                        "type": "string"
                    },
                    "studyType": {
                        "type": "string"
                    },
                    "honors": {
                        "type": [
                            "array",
                            "null"
                        ],
                        "items": {
                            "type": "string"
                        }
                    },
                    "courses": {
                        "type": [
                            "array",
                            "null"
                        ],
                        "items": {
                            "type": "string"
                        }
                    },
                    "startDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "endDate": {
                        "type": "string"
                    },
                    "highlights": {
                        "type": [
                            "array",
                            "null"
                        ],
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "affiliations": {
            "type": [
                "array",
                "null"
            ],
            "items": {
                "type": "object",
                "required": [
                    "organization",
                    "location",
                    "position",
                    "startDate",
                    "endDate",
                    "highlights"
                ],
                "properties": {
                    "organization": {
                        "type": "string"
                    },
                    "location": {
                        "type": "string"
                    },
                    "url": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "uri"
                    },
                    "position": {
                        "type": "string"
                    },
                    "startDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "endDate": {
                        "type": "string"
                    },
                    "highlights": {
                        "type": [
                            "array",
                            "null"
                        ],
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "awards": {
            "type": [
                "array",
                "null"
            ],
            "items": {
                "type": "object",
                "required": [
                    "title",
                    "date",
                    "issuer"
                ],
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "location": {
                        "type": "string"
                    },
                    "date": {
                        "type": "string",
                        "format": "date"
                    },
                    "issuer": {
                        "type": "string"
                    },
                    "url": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "uri"
                    },
                    "highlights": {
                        "type": [
                            "null",
                            "array"
                        ],
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "certificates": {
            "type": [
                "array",
                "null"
            ],
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "date",
                    "issuer"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "date": {
                        "type": "string",
                        "format": "date"
                    },
                    "issuer": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        },
        "publications": {
            "type": [
                "array",
                "null"
            ],
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "publisher",
                    "releaseDate",
                    "url"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "publisher": {
                        "type": "string"
                    },
                    "releaseDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        },
        "projects": {
            "type": [
                "array",
                "null"
            ],
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "url",
                    "affiliation",
                    "startDate",
                    "endDate",
                    "highlights"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "url": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "uri"
                    },
                    "affiliation": {
                        "type": "string"
                    },
                    "startDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "endDate": {
                        "type": "string"
                    },
                    "highlights": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "skills": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "category",
                    "skills"
                ],
                "properties": {
                    "category": {
                        "type": "string"
                    },
                    "skills": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "languages": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "language",
                    "fluency"
                ],
                "properties": {
                    "language": {
                        "type": "string"
                    },
                    "fluency": {
                        "type": "string"
                    }
                }
            }
        },
        "interests": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "references": {
            "type": [
                "array",
                "null"
            ],
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "reference"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    },
                    "reference": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
